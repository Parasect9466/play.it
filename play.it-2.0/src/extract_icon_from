extract_icon_from() {
local file_ext=${1##*.}
case $file_ext in
	exe) wrestool --extract --type=14 --output="$PLAYIT_WORKDIR" "$1" ;;
	ico) icotool --extract --output="$PLAYIT_WORKDIR" "$1" ;;
	bmp) convert -debug "$1" "${PLAYIT_WORKDIR}/${1%.*}.png" ;;
	*) liberror 'file_ext' 'extract_icon_from' ;;
esac
}

